/* Aim :WAp to define a counter function to print how many times the
        function is called . use storage classes.
   Name : Tanishq Boraste    Roll No: 26
   Division : A        UIN : 241A031   Branch : AIDS
*/
#include<stdio.h>
// Counter function using static variable
void counter(){
    static int count = 0; // Static variable to track function calls
        count ++;
    printf("Counter Function Called : %d\n",count);
}
int main(){
    int i;
    printf("\t\t\t *** Storage Class *** \n\n");
    for(i=1; i<=26;i++)
    {
    counter();
    }
    return 0;
}
